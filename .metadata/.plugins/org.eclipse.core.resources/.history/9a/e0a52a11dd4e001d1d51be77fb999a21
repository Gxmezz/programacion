package ejercicios_programacion;

import java.util.Scanner;

public class ejercicio1 {
    public static void main (String[] args) {
    	try (Scanner teclado = new Scanner(System.in)) {
    		int A, B, x, r;//Los dos valores que tenemos que tiene que introducir el usuario
    		int contador=0;
    		int sf=contador;
    		
    	System.out.println("Ingresa el valor A");
    		A=teclado.nextInt(); //usuario introduce un núnmero
	    System.out.println("Ingresa el valor B");
	    	B=teclado.nextInt(); //usuario introduce un núnmero mayor o igual a A
	    	
	    for (x=A && x<=B && x++)
	    	{ r=x;
	    	  contador=r+contador;
	    }
	    	
	    System.out.print("La suma final es "+sf);
    }
   }
}